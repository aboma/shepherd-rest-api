{{#if controller.editableContent}}
	<div class="form-horizontal">
		<fieldset>
			{{#if controller.isEditing }}
	    		<legend>Edit "{{ editableContent.name }}" Portfolio</legend>
	    	{{else}}
	    		<legend>Create Portfolio</legend>
	    	{{/if }}
	    	{{ view Luxin.Message viewName="portfolioFormMessage" classBinding="type messageType" }}
	    	{{#if controller.editableContent.url }}
	    		<div class="control-group">
		    		<label class="control-label">Portfolio URI</label>
	    			<label class="data-label">{{ editableContent.url }}</label>
		    	</div>
	    	{{/if}}
	    	<div class="control-group">
	    		<label class="control-label">Portfolio Name</label>
	    		<div class="controls">
	   				{{ view Ember.TextField viewName="pNameTextField" 
	   				   valueBinding="editableContent.name" disabledBinding="Luxin.PortfolioEditView.isDisabled" }}
	    		</div>
	    	</div>
	    	<div class="control-group">
	    		<label class="control-label">Description</label>
	    		<div class="controls">
	   				{{ view Ember.TextArea viewName="pDescriptionTextArea" 
	   				   valueBinding="editableContent.description" disabledBinding="Luxin.PortfolioEditView.isDisabled" }}
	    		</div>
	    	</div>
	    	{{#if controller.isEditing }}
		    	<div class="control-group">
		    		<label class="control-label">Created On</label>
		    		<label class="data-label">{{ editableContent.createdAt }}</label>
		    	</div>
		    	<div class="control-group">
		    		<label class="control-label">Updated On</label>
		    		<label class="data-label">{{ editableContent.updatedAt }}</label>
		    	</div>
	    	{{/if}}
	    	<div class="control-group button-group">
	    		<button {{ action "save" target="parentView" 
					disabledBinding="Luxin.PortfolioEditView.isDisabled" class="btn btn-success" }}> Save </button
				{{#view Ember.Button action="cancel" target="parentView" 
					disabledBinding="Luxin.PortfolioEditView.isDisabled" class="btn btn-warning" }} Cancel {{/view}}
				{{#if controller.isEditing }}
					{{#view Ember.Button action="destroy" target="parentView" 
						disabledBinding="Luxin.PortfolioEditView.isDisabled" class="btn btn-danger" }} Delete {{/view}}
				{{/if}}
	    	</div>
	    </fieldset>
	</div>
{{/if}}