{{#if Mirrorball.selectedPortfolioController.editableContent}}
	<div class="form-horizontal">
		<fieldset>
	    	<legend>Create New Portfolio</legend>
	    	{{ view Mirrorball.Message viewName="portfolioFormMessage" classBinding="type messageType" }}
	    	{{#if Mirrorball.selectedPortfolioController.editableContent.uri }}
	    		<label class="control-label">Portfolio URI</label>
	    		<div class="controls">
	    			{{ editableContent.uri }}
	    		</div>
	    	{{/if}}
	    	<div class="control-group">
	    		<label class="control-label">Portfolio Name</label>
	    		<div class="controls">
	   				{{ view Ember.TextField viewName="pNameTextField" 
	   				   valueBinding="editableContent.name" disabledBinding="Mirrorball.PortfolioEditView.isDisabled" }}
	    		</div>
	    	</div>
	    	<div class="control-group">
	    		<label class="control-label">Description</label>
	    		<div class="controls">
	   				{{ view Ember.TextArea viewName="pDescriptionTextArea" 
	   				   valueBinding="editableContent.description" disabledBinding="Mirrorball.PortfolioEditView.isDisabled" }}
	    		</div>
	    	</div>
	    	<div class="control-group button-group">
	    		{{#view Ember.Button action="save" target="parentView" 
					disabledBinding="Mirrorball.PortfolioEditView.isDisabled" class="btn btn-success" }} Save {{/view}}
				{{#view Ember.Button action="cancel" target="parentView" 
					disabledBinding="Mirrorball.PortfolioEditView.isDisabled" class="btn btn-warning" }} Cancel {{/view}}
				{{#unless controller.isNew }}
					{{#view Ember.Button action="remove" target="parentView" 
						disabledBinding="Mirrorball.PortfolioEditView.isDisabled" class="btn btn-danger" }} Delete {{/view}}
				{{/unless}}
	    	</div>
	    </fieldset>
	</div>
{{/if}}